{
    "dependencies": {
        "@observablehq/plot": "^0.6.12",
        "anywidget": "^0.6.5",
        "d3": "^7.8.5"
    },
    "scripts": {
        "bundle": "esbuild --format=esm --bundle --outdir=src/pyobsplot/static --entry-names=static-[name] js/widget.js css/styles.css",
        "watch": "esbuild --format=esm --bundle --outdir=src/pyobsplot/static --entry-names=static-[name] js/widget.js css/styles.css --watch",
        "build": "npm run bundle && hatch build",
        "test": "hatch run test",
        "uistart": "hatch run jupyter lab --config tests/ui/jupyter_server_config.py",
        "uitest": "hatch run playwright test --workers=1 --config tests/ui/playwright.config.cjs",
        "uitest:debug": "PWDEBUG=1 hatch run playwright test --config tests/ui/playwright.config.cjs",
        "uitest:report": "http-server ./tests/ui/playwright-report -a localhost -o",
        "uitest:update": "hatch run playwright test --workers=1 --config tests/ui/playwright.config.cjs --update-snapshots",
        "uitest:ui": "hatch run playwright test --workers=1 --config tests/ui/playwright.config.cjs --ui"
    },
    "devDependencies": {
        "@jupyterlab/galata": "^5.0.6",
        "@playwright/test": "^1.38.1",
        "esbuild": "^0.17.19"
    },
    "type": "module",
    "workspaces": [
        "packages/pyobsplot-js"
    ]
}
